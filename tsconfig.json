{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom", "dom.iterable", "scripthost"],
    "jsx": "react",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true
  },
  "include": [
    "./src/**/*"
  ]
}
